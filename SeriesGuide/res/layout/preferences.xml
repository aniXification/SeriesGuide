<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_showlist" >

        <CheckBoxPreference
            android:defaultValue="False"
            android:key="onlyFutureEpisodes"
            android:summary="@string/pref_onlyfuturesummary"
            android:title="@string/pref_onlyfuture" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/upcominglimit"
            android:entryValues="@array/upcominglimitData"
            android:key="com.battlelancer.seriesguide.upcominglimit"
            android:summary="@string/pref_upcominglimitsummary"
            android:title="@string/pref_upcominglimit" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_notifications" >

        <CheckBoxPreference
            android:defaultValue="True"
            android:key="com.battlelancer.seriesguide.notifications"
            android:summary="@string/pref_notificationssummary"
            android:title="@string/pref_notifications" />

        <CheckBoxPreference
            android:defaultValue="False"
            android:key="com.battlelancer.seriesguide.notifications.vibrate"
            android:summary="@string/pref_vibratesummary"
            android:title="@string/pref_vibrate" />

        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:key="com.battlelancer.seriesguide.notifications.ringtone"
            android:ringtoneType="notification"
            android:showDefault="true"
            android:showSilent="true"
            android:title="@string/pref_ringtone" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_content" >

        <CheckBoxPreference
            android:defaultValue="False"
            android:key="onlySeasonEpisodes"
            android:summary="@string/pref_onlyseasonepssummary"
            android:title="@string/pref_onlyseasoneps" />

        <ListPreference
            android:defaultValue="en"
            android:entries="@array/languages"
            android:entryValues="@array/languageData"
            android:key="language"
            android:summary="@string/pref_languagesummary"
            android:title="@string/pref_language" />

        <ListPreference
            android:defaultValue="default"
            android:entries="@array/numbers"
            android:entryValues="@array/numberData"
            android:key="numberformat"
            android:summary="@string/pref_numbersummary"
            android:title="@string/pref_number" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/offsets"
            android:entryValues="@array/offsetData"
            android:key="com.battlelancer.seriesguide.timeoffset"
            android:summary="@string/pref_offsetsummary"
            android:title="@string/pref_offset" />

        <CheckBoxPreference
            android:defaultValue="True"
            android:key="com.battlelancer.seriesguide.autoupdate"
            android:summary="@string/pref_autoupdatesummary"
            android:title="@string/pref_autoupdate" />

        <CheckBoxPreference
            android:defaultValue="True"
            android:key="com.battlelancer.seriesguide.autoupdatewlanonly"
            android:title="@string/pref_updatewifionly" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_sharing" >

        <Preference
            android:key="clearGetGlueCredentials"
            android:summary="@string/clearGetGlueCredentialssummary"
            android:title="@string/clearGetGlueCredentials" />

        <Preference
            android:key="com.battlelancer.seriesguide.trakt"
            android:title="@string/trakt" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_more" >

        <Preference
            android:key="aboutPref"
            android:title="@string/about" />

        <Preference
            android:key="com.battlelancer.seriesguide.helpTranslate"
            android:title="@string/helptranslate" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_advanced" >

        <Preference
            android:key="backup"
            android:summary="@string/backup_summary"
            android:title="@string/backup" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/themeSelection"
            android:entryValues="@array/themeSelectionData"
            android:key="com.battlelancer.seriesguide.theme"
            android:summary="@string/pref_themesummary"
            android:title="@string/pref_theme" />

        <Preference
            android:key="clearCache"
            android:summary="@string/clear_cache_summary"
            android:title="@string/clear_cache" />

        <CheckBoxPreference
            android:defaultValue="True"
            android:key="enableGAnalytics"
            android:summary="@string/pref_ganalyticssummary"
            android:title="@string/pref_ganalytics" />

        <CheckBoxPreference
            android:defaultValue="True"
            android:key="hideimages"
            android:summary="@string/pref_hideimagessummary"
            android:title="@string/pref_hideimages" />
    </PreferenceCategory>

</PreferenceScreen>
